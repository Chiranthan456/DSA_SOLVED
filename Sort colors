class Solution {
public:
    void sortColors(vector<int>& nums) {
        int n = nums.size();

        int m=0,h=n-1,l=0;
        while(m<=h){
            if(nums[m]==0){
                swap(nums[m],nums[l]);
                m++;
                l++;
            }
            else if(nums[m]==1){
                m++;
            }
            else{
                swap(nums[m],nums[h]);
                h--;
            }
        }
    }
};
